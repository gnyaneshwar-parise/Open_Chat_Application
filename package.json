{
  "name": "rtrp",
  "version": "1.0.1",
  "description": "Open Chat Application - Real-time Socket.IO chat",
  "main": "rtrpServer.js",
  "scripts": {
    "start": "node rtrpServer.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint *.js uiLayer/*.js",
    "lint:fix": "eslint *.js uiLayer/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "check": "npm run lint && npm run format:check && npm test"
  },
  "keywords": ["chat", "socket.io", "real-time"],
  "author": "Harshith",
  "license": "ISC",
  "dependencies": {
    "express": "^5.2.1",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  }
}
