{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
   "globals": {
    "io": "readonly"
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "error",
    "semi": ["error", "always"],
    "quotes": ["warn", "double"],
    "indent": ["warn", 2],
    "no-multiple-empty-lines": ["warn", { "max": 2 }],
    "eqeqeq": "warn",
    "no-var": "error",
    "prefer-const": "warn"
  },
  "ignorePatterns": ["node_modules/", "*.min.js"]
}
